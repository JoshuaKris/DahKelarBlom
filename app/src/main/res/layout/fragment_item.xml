<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_merchant_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_account_box_24dp"
        android:tint="@color/colorPrimaryDark"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_merchant_image">

        <TextView
            android:id="@+id/tv_merchant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Nama Toko"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/primary_text_light"/>

        <TextView
            android:id="@+id/tv_merchant_closed"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toko ini sedang tutup"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorRedButton"/>

        <TextView
            android:id="@+id/tv_merchant_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Alamat Toko"
            android:textSize="12sp"
            android:textColor="@android:color/secondary_text_light"/>

        <TextView
            android:id="@+id/tv_merchant_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="telepon Toko"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@android:color/primary_text_light"/>

        <TextView
            android:id="@+id/tv_merchant_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="email Toko"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>

    </LinearLayout>

</RelativeLayout>
