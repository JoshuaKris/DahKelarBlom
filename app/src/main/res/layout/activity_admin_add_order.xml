<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.adminMenu.AdminAddOrderActivity">

    <fragment
        android:id="@+id/f_header"
        android:name="com.example.dahkelarblom.utils.HeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_below="@id/f_header"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title_roaming_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Pilih Jenis Order"
            android:textColor="@color/textColorLabel"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/rl_order_choose"
            android:layout_below="@id/tv_title_roaming_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hint_order_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jenis order"
                android:textColor="@color/greyDarkerDefault"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_chevron_down" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_hint_order_choose"
                android:layout_marginTop="8dp"
                android:background="@color/textColorHint" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_container_order_name"
            android:layout_below="@id/rl_order_choose"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="16sp"
                android:textColor="@color/textColorLabel"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_order_name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_box_normal"
                android:padding="4dp"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                android:textColor="@color/textColorLabel"
                android:inputType="textAutoComplete"
                android:lines="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_container_order_phone"
            android:layout_below="@id/ll_container_order_name"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Telepon"
                android:textSize="16sp"
                android:textColor="@color/textColorLabel"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_order_phone_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_box_normal"
                android:padding="4dp"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                android:textColor="@color/textColorLabel"
                android:inputType="phone"
                android:lines="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_container_order_price"
            android:layout_below="@id/ll_container_order_phone"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:textSize="16sp"
                android:textColor="@color/textColorLabel"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_order_price_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_box_normal"
                android:padding="4dp"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                android:textColor="@color/textColorLabel"
                android:inputType="number"
                android:lines="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_container_order_pickup"
            android:layout_below="@id/ll_container_order_price"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimasi Pengerjaan"
                android:textSize="16sp"
                android:textColor="@color/textColorLabel"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_order_pickup_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_box_normal"
                android:padding="4dp"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                android:textColor="@color/textColorLabel"
                android:inputType="datetime"
                android:lines="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_container_order_payment_status"
            android:layout_below="@id/ll_container_order_pickup"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Pembayaran"
                android:textSize="16sp"
                android:textColor="@color/textColorLabel"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_order_payment_status_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_box_normal"
                android:padding="4dp"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                android:textColor="@color/textColorLabel"
                android:inputType="textAutoComplete"
                android:lines="1"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_button_add_order"
            android:layout_below="@id/ll_container_order_payment_status"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="TAMBAH"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

</RelativeLayout>