<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_empty_tracking_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="kode salah"
        android:textSize="18sp"
        android:textAllCaps="true"
        android:textColor="@android:color/primary_text_light"
        android:textStyle="bold"/>

    <View
        android:id="@+id/v_div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/tv_empty_tracking_title"
        android:background="@drawable/divider"
        android:backgroundTint="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/tv_empty_tracking_message"
        android:layout_below="@id/v_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:text="Kode booking yang anda masukkan salah atau tidak ditemukan, coba ulang kembali"
        android:textSize="14sp"
        android:textColor="@android:color/primary_text_light"/>


    <Button
        android:id="@+id/bt_ok"
        android:layout_below="@id/tv_empty_tracking_message"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/bordered_button_ripple"
        android:text="OK"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />

</RelativeLayout>